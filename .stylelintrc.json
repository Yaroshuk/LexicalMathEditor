{
    "extends": ["stylelint-config-standard-scss", "stylelint-config-rational-order"],
    "rules": {
        "selector-class-pattern": "^(?:[A-Za-z]*)+$",
        "scss/percent-placeholder-pattern": "^(?:[A-Za-z]*)+$",
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["global"]
            }
        ]
    }
}